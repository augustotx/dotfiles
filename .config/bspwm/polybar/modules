
[module/launcher]
type=custom/text
content =  
content-font = 2
content-foreground= ${color.green}
content-transparent= ${color.transparent}
content-padding = 1
click-left=rofi -show drun

[module/cpu]
type = internal/cpu
interval = 2
format = <label>
format-foreground= ${color.maroon}
format-transparent= ${color.transparent}
format-prefix = " "
format-padding = 1

[module/memory]
type = internal/memory
interval = 2
format = <label>
format-foreground= ${color.rosewater}
format-transparent= ${color.transparent}
format-prefix = " "
label = "%mb_used%"
format-padding = 1

