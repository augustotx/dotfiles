[module/spotify]
type = custom/script
tail = true
interval = 1
; prefix symbol is shown before the text
format-prefix = "  "
format = <label>
exec = ~/.config/bspwm/polybar/scroll_spotify_status.sh
format-suffix = "  "
format-transparent= ${color.transparent}


[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-click = true
enable-scroll = true
reverse-scroll = true
format = <label-state> <label-mode>
format-transparent= ${color.transparent}

label-focused = %name%
label-focused-foreground = ${color.maincolor}
label-focused-underline =  ${color.maincolor}
label-focused-padding = 1

label-occupied = %name%
label-occupied-foreground = ${color.foreground}
label-occupied-underline = ${color.foreground}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-foreground = ${color.red}
label-urgent-underline =  ${color.red}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${color.foreground}
label-empty-padding = 1

#label-monocle = "[M]"
#label-tiled = "[]="
#label-floating = ", ><>"
#label-pseudotiled = ", P"
#label-fullscreen = ", F"
#label-locked = " | L"
#label-sticky = " | S"
#label-private = " | Private"


[module/battery]
type = internal/battery
full-at = 99
battery = ${system.battery}
adapter = ${system.adapter}
poll-interval = 2
time-format = %H:%M
format-charging = <animation-charging> <label-charging>
format-charging-padding = 1
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-padding = 1
label-charging = %percentage%%
label-discharging = %percentage%%
format-full = "<label-full> "
format-full-prefix = "  "
label-full = %percentage%%
ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "
animation-charging-0 = " "
animation-charging-1 = " "
animation-charging-2 = " "
animation-charging-3 = " "
animation-charging-4 = " "
animation-charging-framerate = 700
format-charging-foreground= ${color.green}
format-discharging-foreground= ${color.maincolor}
format-full-foreground= ${color.maincolor}

[module/volume]
type = internal/pulseaudio
use-ui-max = true
interval = 5
format-volume = <ramp-volume> <label-volume>
format-volume-padding = 1 
format-muted = 󰝟 Muted
format-muted-padding = 1
label-volume = %percentage%%
ramp-volume-0 = 󰕿
ramp-volume-1 = 󰖀
ramp-volume-2 = 󰕾
ramp-headphones-0 = 
ramp-headphones-1 = 
format-volume-foreground= ${color.maincolor}
format-volume-transparent= ${color.transparent}


[module/brightness]
type = internal/backlight
card = ${system.graphics_card}
format = <ramp> <label>
label = %percentage%%
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-5 = 
ramp-6 = 
ramp-7 = 
ramp-8 = 
ramp-9 = 
format-padding = 1
format-foreground= ${color.maincolor}

[module/time]
